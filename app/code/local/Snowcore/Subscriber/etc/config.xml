<?xml version="1.0"?>
<config>
    <modules>
        <Snowcore_Subscriber>
            <version>1.0.0</version>
        </Snowcore_Subscriber>
    </modules>
    <global>
        <blocks>
            <snowcore_subscriber>
                <class>Snowcore_Subscriber_Block</class>
            </snowcore_subscriber>
        </blocks>
        <models>
            <snowcore_subscriber>
                <class>Snowcore_Subscriber_Model</class>
            </snowcore_subscriber>
        </models>
        <resources>
            <snowcore_subscriber_setup>
                <setup>
                    <module>Snowcore_Subscriber</module>
                </setup>
            </snowcore_subscriber_setup>
        </resources>
        <helpers>
            <snowcore_subscriber>
                <class>Snowcore_Subscriber_Helper</class>
            </snowcore_subscriber>
        </helpers>
    </global>
    <frontend>
        <layout>
            <updates>
                <snowcore_subscriber>
                    <file>snowcore/subscriber.xml</file>
                </snowcore_subscriber>
            </updates>
        </layout>
        <events>
            <newsletter_subscriber_save_before>
                <observers>
                    <snowcore_subscriber_save_additional>
                        <class>snowcore_subscriber/observer</class>
                        <method>saveAdditionalData</method>
                    </snowcore_subscriber_save_additional>
                </observers>
            </newsletter_subscriber_save_before>
        </events>
    </frontend>
    <adminhtml>
        <events>
            <core_block_abstract_prepare_layout_before>
                <observers>
                    <snowcore_subscriber_add_column>
                        <class>snowcore_subscriber/observer</class>
                        <method>addGridColumn</method>
                    </snowcore_subscriber_add_column>
                </observers>
            </core_block_abstract_prepare_layout_before>
        </events>
    </adminhtml>
</config>